extends layout

block content
  .container
    br
    br  
    #work-collections
      .row
        .col.s12
          ul.collection.z-depth-1
            li.collection-item.avatar
              i.material-icons.cyan.circle card_travel
              h5.collection-header #{title}
            each book in book_list
              li.collection-item
                a(href=book.url)
                  .row
                    .col.s12.m2
                      img(style='max-height: 102px; max-width: 100px' src="/images/"+book.image, alt="", srcset="")
                    .col.s10.m7
                      p.collections-title !{book.title} 
                      | (#{book.author.name})
                    .col.s2.m3
                      i.material-icons keyboard_arrow_right
            else
              li 
                .row
                  .col.s9
                    p.collections-title There are no books.

extends layout

block content
  section#long_content  
    .container
      br
      br  
      #work-collections
        .row
          .col.s12
            ul.collection.z-depth-1
              li.collection-item.avatar
                i.material-icons.cyan.circle card_travel
                h5.collection-header #{title}
              each book in book_list
                li.collection-item
                  a(href=book.url)
                    .row
                      .col.s12.m3.l2
                        img(style='max-height: 200px;' src="/images/"+book.image, alt="", srcset="").z-depth-1
                      .col.s11.m7.l5.mt-10
                        p.collections-title !{book.title} 
                        | (#{book.author.name})
                      .col.s1.m2.l5.mt-10
                        i.material-icons keyboard_arrow_right
              else
                li 
                  .row
                    .col.s9
                      p.collections-title There are no books.
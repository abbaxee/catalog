doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title #{title}
    link(href='/fonts/material-design-icons/MaterialIcons-Regular.ttf', rel='stylesheet')
    link(rel='stylesheet', href='/css/materialize.min.css')
    script(type='text/javascript', src='/js/jquery.min.js')
    script(src='/js/materialize.min.js')
    script.
      $(document).ready(function(){
        $('.sidenav').sidenav();
      });
    link(rel='stylesheet', href='/css/form.css')

  body
  nav.teal
    .nav-wrapper
      a.brand-logo(href='#!') Smart Library
      a.sidenav-trigger(href='#', data-target='mobile-demo')
        i.material-icons menu
      ul.right.hide-on-med-and-down
        li
          a(href='/users/login') Login
        li
          a(href='/users/register') Sign up
ul#mobile-demo.sidenav
  li
    a(href='/users/login') Login
  li
    a(href='/users/register') Sign up
  
!= messages()
block content
